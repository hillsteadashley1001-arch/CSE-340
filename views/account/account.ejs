<h1>Account Management</h1>

<%- messages() %>

<% if (locals.accountData) { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <section class="inventory-management">
      <h3>Inventory Management</h3>
      <ul>
        <li><a href="/inv/">Manage Inventory</a></li>
        <li><a href="/inv/add-classification">Add Classification</a></li>
        <li><a href="/inv/add-inventory">Add Inventory</a></li>
      </ul>
    </section>
  <% } %>

  <p>
    <a href="/account/update/<%= accountData.account_id %>">
      Update Account Information
    </a>
  </p>
<% } else { %>
  <p>You are not logged in.</p>
  <p><a href="/account/login">Login</a></p>
<% } %>
