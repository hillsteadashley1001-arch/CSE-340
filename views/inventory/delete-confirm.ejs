<!-- views/inventory/delete-confirm.ejs -->

<h1><%= title || "Delete Inventory Item" %></h1>

<%- messages() %>

<p class="warning">
  <strong>Confirm Deletion:</strong> This action is permanent and cannot be undone.
</p>

<form action="/inv/delete" method="post" class="inventory-form">
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    value="<%= inv_make %>"
    readonly
  >

  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    value="<%= inv_model %>"
    readonly
  >

  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    value="<%= inv_year %>"
    readonly
  >

  <label for="inv_price">Price:</label>
  <input
    type="text"
    id="inv_price"
    value="$<%= new Intl.NumberFormat().format(inv_price) %>"
    readonly
  >

  <button type="submit" class="danger">
    Delete Vehicle
  </button>

  <p>
    <a href="/inv/management">Cancel and return to Inventory Management</a>
  </p>
</form>
