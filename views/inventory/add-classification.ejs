<h1><%= title || "Add Classification" %></h1>

<%- messages() %>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(err => { %>
      <li><%= err.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post" class="simple-form" novalidate>
  <label for="classification_name">
    Classification Name
    <span class="hint">(letters and numbers only)</span>
  </label>

  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    pattern="^[A-Za-z0-9]+$"
    title="Only letters and numbers are allowed"
    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
  >

  <button type="submit">Add Classification</button>
</form>
