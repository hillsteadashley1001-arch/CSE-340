<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Inventory Management</h1>
<% } %>

<%- messages() %>


<section class="inventory-admin-links">
  <h2>Inventory Administration</h2>

  <ul class="admin-links">
    <li>
      <a href="/inv/add-classification">Add New Classification</a>
    </li>
    <li>
      <a href="/inv/add-inventory">Add New Inventory Item</a>
    </li>
  </ul>
</section>

<section class="inventory-management">
  <h2>Manage Inventory</h2>

  <p>
    Select a classification to view, update, or delete inventory items.
  </p>

  <label for="classificationList">Choose a Classification</label>
  <%- classificationSelect %>

  <table id="inventoryDisplay" class="inventory-table">
    <thead>
      <tr>
        <th>Vehicle</th>
        <th>Year</th>
        <th>Price</th>
        <th>Miles</th>
        <th>Modify</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Populated by JS -->
    </tbody>
  </table>

  <noscript>
    <p class="noscript-warning">
      JavaScript must be enabled to manage inventory.
    </p>
  </noscript>
</section>

<script src="/js/inventory.js"></script>
